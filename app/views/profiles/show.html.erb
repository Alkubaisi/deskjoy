
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">





<h2 class="text-center"><%= "#{@user.first_name} #{@user.last_name}" %></h2>

<% if @user.photo? %>
  <%= cl_image_tag @user.photo.path, class: 'avatar-square' %>
<% end %>
<br>


<div class = "profile-box">

         <h4><b><%= "About Me" %></b> </h4>

        <ul>
          <li><b>Bio: </b><br>  <%= @user.info%></li>

          <li><b>Linkedin:</b> <br> <%= @user.linkedin %></li>
          <li><b>Twitter:</b> <br>  <%= @user.twitter %></li>

        </ul>




        <%= link_to "edit profile", edit_profile_path(@user), class: "btn btn-primary" %>

        <br>
        <br>
        <br>
        <br>


</div>
      </div>
    </div>
  </div>
</div>
</div>
