<h1>Edit your profile</h1>

<%= simple_form_for @user, url: profile_path(@user) do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :linkedin, label: "LinkedIn Profile" %>
  <%= f.input :twitter, label: "Twitter Profile" %>

  <%= f.submit "Update your public profile" %>
<% end %>
